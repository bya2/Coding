{
  "compilerOptions": {
    "target": "ESNext",
    "pretty": true,
    "watch": true,
    // "allowJs": true,
    // "checkJs": true,
    "resolveJsonModule": true,
    "strict": true,

    "module": "CommonJS",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/misc"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "alwaysStrict": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },

  "include": ["src/**/*", "ext.d.ts"],

  "exclude": ["node_modules/**/*"]
}
